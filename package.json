{
  "name": "kahla",
  "version": "0.7.0",
  "description": "Kahla is a cross platform business messaging app.",
  "author": "Anduin@aiursoft.com",
  "license": "MIT",
  "scripts": {
    "electron": "npm run build && electron www/electron.js",
    "desktop": "npm run prod && build",
    "cordova": "npm run build && cordova run browser",
    "android": "npm run prod && cordova run android",
    "start": "ng serve",
    "build": "ng build --base-href /",
    "lint": "ng lint --type-check && tsc",
    "pack": "asar pack ./www ./www/app.asar && asar pack ./www ./dist/linux-unpacked/resources/app.asar",
    "prod": "ng build --base-href / --prod && npm run pack",
    "prod-zh": "ng build --base-href / --prod --local zh --i18n-file ./src/messages.zh.xlf && npm run pack"
  },
  "dependencies": {
    "@angular/animations": "6.0.1",
    "@angular/common": "6.0.1",
    "@angular/compiler": "6.0.1",
    "@angular/core": "6.0.1",
    "@angular/forms": "6.0.1",
    "@angular/http": "6.0.1",
    "@angular/platform-browser": "6.0.1",
    "@angular/platform-browser-dynamic": "6.0.1",
    "@angular/pwa": "^0.6.1",
    "@angular/router": "6.0.1",
    "@angular/service-worker": "6.0.1",
    "cordova-android": "^7.0.0",
    "cordova-browser": "^5.0.3",
    "cordova-ios": "^4.5.4",
    "cordova-plugin-whitelist": "^1.3.3",
    "core-js": "^2.5.3",
    "font-awesome": "^4.7.0",
    "pulltorefreshjs": "^0.1.14",
    "rxjs": "^6.1.0",
    "sweetalert": "^2.1.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.1",
    "@angular-devkit/core": "^0.6.1",
    "@angular/cli": "6.0.1",
    "@angular/compiler-cli": "6.0.1",
    "@angular/language-service": "6.0.1",
    "@types/jasmine": "^2.8.5",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^10.0.8",
    "asar": "^0.14.0",
    "codelyzer": "^4.1.0",
    "cordova": "^8.0.0",
    "electron": "^2.0.0",
    "electron-builder": "^20.9.0",
    "jasmine-core": "^3.1.0",
    "jasmine-spec-reporter": "~4.2.1",
    "ts-node": "~6.0.0",
    "tslint": "~5.10.0",
    "typescript": "^2.7.2",
    "webpack": "^4.8.3"
  },
  "cordova": {
    "platforms": [
      "android",
      "browser",
      "ios"
    ],
    "plugins": {
      "cordova-plugin-whitelist": {}
    }
  }
}
