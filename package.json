{
  "name": "kahla",
  "version": "3.8.0",
  "description": "Kahla is a cross-platform business messaging app.",
  "author": "Aiursoft <postmaster@aiursoft.com> (https://www.aiursoft.com/)",
  "build": {
    "appId": "com.aiursoft.kahla",
    "productName": "Kahla",
    "copyright": "Copyright Â© 2018 Aiursoft",
    "directories": {
      "app": "www"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE",
      "artifactName": "${productName}.Setup.${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        },
        {
          "target": "zip"
        }
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        {
          "target": "deb"
        },
        {
          "target": "rpm"
        },
        {
          "target": "tar.gz"
        }
      ]
    }
  },
  "contributors": [
    "Anduin@aiursoft.com",
    "xxyzz@aiursoft.com",
    "EdgeNeko@aiursoft.com",
    "2539820590@qq.com",
    "l2dy@macports.org"
  ],
  "license": "MIT",
  "scripts": {
    "postinstall": "npm run prebuild",
    "electron": "ng build --base-href ./ && electron ./www/index.js",
    "start": "ng serve --open",
    "prebuild": "ts-node version.ts",
    "build": "ng build --base-href /",
    "lint": "ng lint --type-check && tsc",
    "prod": "ng build --base-href / --prod --output-hashing none",
    "prod-electron": "ng build --base-href ./ --prod",
    "prod-zh": "ng build --base-href / --prod --i18n-locale zh --i18n-file ./src/messages.zh.xlf"
  },
  "dependencies": {
    "@angular/animations": "8.2.5",
    "@angular/common": "8.2.5",
    "@angular/compiler": "8.2.5",
    "@angular/core": "8.2.5",
    "@angular/forms": "8.2.5",
    "@angular/platform-browser": "8.2.5",
    "@angular/platform-browser-dynamic": "8.2.5",
    "@angular/router": "8.2.5",
    "autolinker": "^3.11.0",
    "blueimp-load-image": "^2.24.0",
    "core-js": "^2.6.4",
    "crypto-js": "^3.1.9-1",
    "font-awesome": "^4.7.0",
    "he": "^1.2.0",
    "ngx-electron": "^2.1.1",
    "rxjs": "^6.5.3",
    "smoothscroll-polyfill": "^0.4.4",
    "sweetalert2": "^8.17.1",
    "zone.js": "^0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.803.3",
    "@angular-devkit/build-optimizer": "^0.803.3",
    "@angular-devkit/core": "^8.3.3",
    "@angular/cli": "8.3.3",
    "@angular/compiler-cli": "^8.2.5",
    "@angular/language-service": "8.2.5",
    "@types/crypto-js": "^3.1.43",
    "@types/jasmine": "^3.4.0",
    "@types/jasminewd2": "^2.0.6",
    "@types/node": "^12.7.4",
    "codelyzer": "^5.1.0",
    "electron": "^6.0.7",
    "electron-builder": "^21.2.0",
    "jasmine-core": "^3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "node": "^12.9.1",
    "ts-node": "^8.3.0",
    "tslint": "~5.19.0",
    "typescript": "~3.5.3",
    "webpack": "^4.39.3"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/AiursoftWeb/Kahla.App.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/AiursoftWeb/Kahla.App/issues"
  },
  "homepage": "https://www.kahla.app",
  "release": "build"
}
